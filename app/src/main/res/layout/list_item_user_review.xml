<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_user_review_author_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_item_user_review_author_label"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/list_item_user_review_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_default_detail_padding"
            android:textSize="20sp"
            tools:text="@string/fake_detail_movie_review_author_name" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_user_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_default_detail_padding"
        android:textSize="16sp"
        tools:text="@string/fake_detail_movie_review" />

</LinearLayout>