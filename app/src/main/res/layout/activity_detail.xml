<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_movie_poster_image_thumbnail"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/fake_detail_image" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/iv_movie_poster_image_thumbnail"
                app:layout_constraintRight_toRightOf="@+id/tv_a_plot_synopsis"
                app:layout_constraintTop_toBottomOf="@+id/iv_movie_poster_image_thumbnail" />

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_default_detail_padding"
                android:layout_marginStart="@dimen/text_default_detail_padding"
                android:layout_marginTop="@dimen/text_default_detail_padding"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_movie_poster_image_thumbnail"
                tools:text="@string/fake_detail_movie_date" />

            <TextView
                android:id="@+id/tv_a_plot_synopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_default_detail_padding"
                android:layout_marginLeft="@dimen/text_default_detail_padding"
                android:layout_marginRight="@dimen/text_default_detail_padding"
                android:layout_marginStart="@dimen/text_default_detail_padding"
                android:layout_marginTop="@dimen/text_default_detail_padding"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
                tools:text="@string/fake_datail_movie_plot" />

            <TextView
                android:id="@+id/tv_user_rating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_default_detail_padding"
                android:text="@string/detail_activity_user_rating_label"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_a_plot_synopsis"
                app:layout_constraintTop_toBottomOf="@+id/tv_a_plot_synopsis" />

            <TextView
                android:id="@+id/tv_user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_user_rating_label"
                app:layout_constraintRight_toRightOf="@+id/fab"
                app:layout_constraintTop_toTopOf="@+id/tv_user_rating_label"
                tools:text="@string/fake_detail_movie_rate" />

            <TextView
                android:id="@+id/tv_user_review_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_default_detail_padding"
                android:text="@string/detail_activity_user_review_label"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_user_rating_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_rating_label" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_default_detail_padding"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_review_label"
                app:layout_constraintLeft_toLeftOf="@+id/tv_user_review_label"
                app:layout_constraintRight_toRightOf="@+id/tv_user_rating" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>